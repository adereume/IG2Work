<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_popup">
    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/addtask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="TÃ¢che"
                android:textColor="#FFFFFF"
                android:drawableLeft="@drawable/add_task"/>

            <Button
                android:id="@+id/addHomework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="Devoir"
                android:textColor="#FFFFFF"
                android:drawableLeft="@drawable/logo_work"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/layout"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/addQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="Question"
                android:textColor="#FFFFFF"
                android:drawableLeft="@drawable/logo_question"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/addNote"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="Note"
                android:textColor="#FFFFFF"
                android:drawableLeft="@drawable/logo_note"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>